@model P_TECNICA.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}
<div class="card-responsive bg-gradient ">
 
    <div class="card-header">
        <h1 class="text-danger ">Eliminar</h1>
        <h3>¿Desea eliminar este usuario? No podra revertir los cambios</h3>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button>
                        <a asp-action="Index" class="btn-outline-primary align-content-end">Regresar</a>
                    </button>
            </div>
    </div>
    <div class="card-body">
        <div class="bg-gradient rounded h-100 p-0 text-white">
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
                <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
                <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fnacimiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fnacimiento)
        </dd>
                <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdUsuarios" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
   
</div>
    </div>
</div>



